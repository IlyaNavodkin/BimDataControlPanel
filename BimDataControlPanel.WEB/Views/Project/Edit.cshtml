@model BimDataControlPanel.BLL.Dtos.Project.EditProjectDto

@{
    ViewBag.Title = "Редактировать проект";
    Layout = "_Layout";
}

<h2>Изменить проект</h2>

<form asp-action="Edit" asp-controller="Project" method="post">
    <input type="hidden" asp-for="Id" class="form-control"/>
    <div class="form-group">
        <label asp-for="Name" class="control-panel">Имя проекта</label>
        <input type="text" asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RevitVersion" class="control-panel">Версия проекта</label>
        <input type="text" asp-for="RevitVersion" class="form-control"/>
        <span asp-validation-for="RevitVersion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Complete" class="control-panel">Проект завершен</label>
        <input asp-for="Complete" class="form-check-input" type="checkbox">
        <span asp-validation-for="Complete" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>

<a class="btn btn-danger" asp-controller="Project" asp-action="Index">Назад</a>
